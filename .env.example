# =================================================================
# Application Configuration
# =================================================================
NEXT_PUBLIC_LOCALE=     # Application locale (e.g., 'en', 'zh'), default is 'en'


# =================================================================
# auth.js Configuration
# =================================================================
AUTH_SECRET=            # Added by `npx auth`. Read more: https://cli.authjs.dev


# =================================================================
# Supabase Configuration
# =================================================================
DATABASE_URL=           # Connect to Supabase via connection pooling
DIRECT_URL=             # Direct database connection URL (for migrations)
SUPABASE_URL=           # Direct connection to the database. Used for migrations
SUPABASE_API_KEY=       # Supabase API key


# =================================================================
# Postgres Configuration 
# =================================================================
POSTGRES_USER=          # PostgreSQL database username for application connections
POSTGRES_PASSWORD=      # PostgreSQL database password for authentication


# =================================================================
# MinIO Configuration 
# =================================================================
MINIO_ROOT_USER=        # MinIO root username for authentication, e.g., 'notra'. Use a strong username.
MINIO_ROOT_PASSWORD=    # MinIO root password for authentication, e.g., 'notra123456'. Keep it secure and do not share.

# =================================================================
# Caddy Configuration
# =================================================================
CADDY_DOMAIN=           # Caddy will serve this domain (e.g., 'example.com')
CADDY_EMAIL=            # Email used for Let's Encrypt SSL certificate registration

# =================================================================
# Important Notes:
# =================================================================
# 1. Rename this file to '.env' for local development
# 2. Never commit the actual '.env' file to version control
# 3. Make sure to replace all placeholder values with real ones
# 4. Keep your secret keys private and never share them