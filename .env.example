# =================================================================
# Application Configuration
# =================================================================
NEXT_PUBLIC_LOCALE=     # Application locale (e.g., 'en', 'zh'), default is 'en'


# =================================================================
# auth.js Configuration
# =================================================================
AUTH_SECRET=            # Added by `npx auth`. Read more: https://cli.authjs.dev


# =================================================================
# Supabase Configuration
# =================================================================
DATABASE_URL=           # Connect to Supabase via connection pooling
DIRECT_URL=             # Direct database connection URL (for migrations)
SUPABASE_URL=           # Direct connection to the database. Used for migrations
SUPABASE_API_KEY=       # Supabase API key


# =================================================================
# Nextjs Configuration (Optional)
# =================================================================
NEXT_IMAGE_CACHE_TIME=  # Nextjs image cache time, default is 1 year


# =================================================================
# Important Notes:
# =================================================================
# 1. Rename this file to '.env' for local development
# 2. Never commit the actual '.env' file to version control
# 3. Make sure to replace all placeholder values with real ones
# 4. Keep your secret keys private and never share them